<h2>Create a new Track Post</h2>

<div class="row">
	<form action="/tracks" method="POST" class="col s12">
		<div class="row">
			<div class="input-field col s6">
				<input type="text" name="title" placeholder="Post Title" id="title" class="validate">
				<label for="title">Title:</label>
			</div>
			<div class="input-field col s6">
				<input type="text" name="artist" class="validate" id="artist" placeholder="Name of artist">
				<label for="artist">Artist:</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<textarea name="content" id="textarea1" class="materialize-textarea"></textarea>
				<label for="content">Content:</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s6">
				<input type="text" name="albumArt" placeholder="Post albumArt" id="albumArt" class="validate">
				<label for="albumArt">AlbumArt:</label>
			</div>
			<div class="input-field col s6">
				<input type="text" name="trackUrl" class="validate" id="trackUrl" placeholder="Name of trackUrl">
				<label for="trackUrl">TrackUrl:</label>
			</div>
		</div>
		<button class="btn waves-effect waves-light" type="submit">Submit<i class="material-icons right">send</i></button>
	</form>
</div>


